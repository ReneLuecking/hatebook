{% extends 'base.html.twig' %}

{% block title %}Suche{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
    <link href="{{ asset('css/search.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <ul class="nav nav-tabs" id="search-results" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">Beiträge</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">Personen</a>
        </li>
    </ul>
    <div class="tab-content" id="search-results-content">
        <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
            <div class="posts">
                <p class="d-none">Keine Beiträge gefunden</p>
            </div>
        </div>
        <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
            {% if users|length > 0 %}
                {% for user in users %}
                    {% include 'search/user.html.twig' %}
                {% endfor %}
            {% else %}
                <p>Keine Personen gefunden.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>HTTP_ROOT = "{{ http_root }}";</script>
    <script src="{{ asset('js/post.js') }}"></script>
{% endblock %}
